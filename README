$ echo 10 >> /tmp/test

 =>
(#S(INOTIFY:EVENT
    :WATCH #<INOTIFY:WATCH pathname: #P"/tmp/test" mask: 2>
    :MASK 2
    :COOKIE 0
    :NAME NIL))
